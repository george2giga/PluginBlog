@model  PluginBlog.Web.Helpers.PaginatedList<PluginBlog.Core.Entities.Tag>

@{
    ViewBag.Title = "Tag list";
    Layout = "~/Areas/BlogAdmin/Views/Shared/_BlogAdminLayout.cshtml";
}

<h2>Tags</h2>

<div class="row">
    <div class="col-md-12">
        <div class="btn-group">
            <a class="btn btn-primary" href="@Url.Action("Create")">Create Tag</a>
        </div>
    </div>
</div>
<br />
<p>
    @Html.Partial("_RecordsPerPage")
</p>
@Html.Partial("_DbMessage")
@{var dummy = Model.FirstOrDefault(); }
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => dummy.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => dummy.UrlSlug)
        </th>
        <th>
            @Html.DisplayNameFor(model => dummy.Description)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlSlug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id})" class="btn btn-warning btn-xs" title="Edit">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="@Url.Action("Details", new { id = item.Id})" class="btn btn-success btn-xs" title="Details">
                    <span class="glyphicon glyphicon-ok"></span>
                </a>
                <a href="@Url.Action("Delete", new { id = item.Id})" class="btn btn-danger btn-xs" title="Delete">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>
    }

</table>
@Html.Partial("_GenericPaging", Model)
