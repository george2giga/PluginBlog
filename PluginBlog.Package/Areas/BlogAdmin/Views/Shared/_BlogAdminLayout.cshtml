@using PluginBlog.Web.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/pluginblog")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PluginBlog", "Index", "Post", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Post <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Post")">List</a></li>
                            <li><a href="@Url.Action("Create", "Post")">Create</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Category <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Category")">List</a></li>
                            <li><a href="@Url.Action("Create", "Category")">Create</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tag <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Tag")">List</a></li>
                            <li><a href="@Url.Action("Create", "Tag")">Create</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-left" role="search" action="@Url.Action("Search","Post")" method="GET">
                    <div class="form-group">
                        <input name="searchText" class="form-control" type="text" placeholder="Search" />
                    </div>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Content("~/")"><i class="glyphicon glyphicon-home" style="line-height: 0"></i> Home</a></li>
                    @if (PluginBlogConfig.GetAuthorization().IsLoggedIn)
                    {
                        <li><a href="@Url.Action("Logout", "Auth")"><i class="glyphicon glyphicon-share-alt" style="line-height: 0"></i> Logout</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PluginBlog</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.12.0/jquery.validate.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/mvc/5.0/jquery.validate.unobtrusive.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/tinymce")
    @Scripts.Render("~/bundles/pluginblog")
    @RenderSection("scripts", required: false)
</body>
</html>
